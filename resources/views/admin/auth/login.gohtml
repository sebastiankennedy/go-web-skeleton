<!DOCTYPE html>
<html lang="zh-Hans">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin | Login</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon"/>
    <link href="/css/all.min.css" rel="stylesheet">
    <link href="/css/icheck-bootstrap.min.css">
    <link href="/css/adminlte.min.css" rel="stylesheet">
</head>

<body class="hold-transition login-page">

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="" class="h1"><b>Go</b> Web Skeleton</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="{{ .LoginOperationUrl }}" method="post">
                {{ with .Errors.email}}
                    <label class="col-form-label" for="inputError" style="color: orangered">
                        {{ range $message := . }}
                            <p>
                                <i class="far fa-times-circle"></i>{{ $message }}
                            </p>
                        {{ end }}
                    </label>
                {{ end }}
                <div class="input-group mb-3">
                    <input type="email"  class="form-control {{ if .Errors.email }}is-invalid {{ end }}" name="email" placeholder="Email" value="{{ .Email }}">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                {{ with .Errors.password}}
                    <label class="col-form-label" for="inputError" style="color: orangered">
                        {{ range $message := . }}
                            <p>
                                <i class="far fa-times-circle"></i>{{ $message }}
                            </p>
                        {{ end }}
                    </label>
                {{ end }}
                <div class="input-group mb-3">
                    <input type="password" class="form-control {{ if .Errors.password }}is-invalid {{ end }}" name="password" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <p class="mb-1">
                <a href="">I forgot my password</a>
            </p>
            <p class="mb-0">
                <a href="{{ .RegisterViewUrl }}" class="text-center">Register a new membership</a>
            </p>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>
<script src="/js/adminlte.min.js"></script>
</body>
</html>